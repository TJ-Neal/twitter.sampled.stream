{
    "AllowedHosts": "*",
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.Debug"
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "System": "Warning",
                "Microsoft": "Warning",
                "Microsoft.AspNetCore.Server.Kestrel.Http2": "Warning"
            }
        },
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithProcessId",
            "WithThread"
        ],
        "WriteTo": [
            {
                "Name": "Async",
                "Args": {
                    "configure": [
                        {
                            "Name": "Console",
                            "Args": {
                                "outputTemplate": "{Timestamp:HH:mm:ss} [{Level}] {Message}\n{Exception}"
                            }
                        },
                        {
                            "Name": "Debug",
                            "Args": {
                                "outputTemplate": "{Timestamp:HH:mm:ss} [{Level}] {Message}\n{Exception}"
                            }
                        }
                    ]
                }
            }
        ],
        "Properties": {
            "Application": "neal-twitter-kafka-tweet-api"
        }
    },
    "Pagination": {
        "DefaultPageSize": 50,
        "MaximumPageSize": 1000
    }
}