{
    "@jdt.merge": {
        "AllowedHosts": "*",
        "Serilog": {
            "Using": [
                "Serilog.Sinks.Debug",
                "Serilog.Sinks.File"
            ],
            "WriteTo": [
                {
                    "Name": "Async",
                    "Args": {
                        "configure": [
                            {
                                "Name": "Debug",
                                "Args": {
                                    "outputTemplate": "{Timestamp:HH:mm:ss} [{Level}] {Message}\n{Exception}"
                                }
                            },
                            {
                                "Name": "File",
                                "IsJson": true,
                                "Args": {
                                    "pathFormat": "C:/Temp/Logs/neal-twitter-streamreader/log_{Date}_{Hour}.json",
                                    "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
                                    "rollOnFileSizeLimit": true,
                                    "fileSizeLimitBytes": 4194304,
                                    "retainedFileCountLimit": 5,
                                    "rollingInterval": "Hour"
                                }
                            }
                        ]
                    }
                }
            ]
        },
        "Kafka": {
            "bootstrap.servers": "localhost:11001"
        }
    }
}