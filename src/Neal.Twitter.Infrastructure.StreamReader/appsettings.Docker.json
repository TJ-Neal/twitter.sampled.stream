{
    "@jdt.merge": {
        "Serilog": {
            "Using": [
                "Serilog.Sinks.File",
                "Serilog.Sinks.Debug"
            ],
            "WriteTo": [
                {
                    "Name": "Async",
                    "Args": {
                        "configure": [
                            {
                                "Name": "File",
                                "IsJson": true,
                                "Args": {
                                    "pathFormat": "/var/lib/neal-twitter-streamreader/log_{Date}_{Hour}.json",
                                    "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
                                    "rollOnFileSizeLimit": true,
                                    "fileSizeLimitBytes": 4194304,
                                    "retainedFileCountLimit": 5,
                                    "rollingInterval": "Hour",
                                    "restrictedToMinimumLevel": "Warning"
                                }
                            }
                        ]
                    }
                }
            ]
        },
        "Kafka": {
            "bootstrap.servers": "http://host.docker.internal:9001"
        }
    }
}